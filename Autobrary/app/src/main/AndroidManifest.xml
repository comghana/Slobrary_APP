<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autobrary">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".main.MainMenu">
        </activity>
        <activity android:name=".main.Rpage"
            android:windowSoftInputMode="stateAlwaysHidden"
            >

        </activity>
        <activity
            android:name=".auth.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>
        <activity
            android:name=".splash.MainLoadActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.AddressSearchActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity android:name=".auth.SignUpActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>